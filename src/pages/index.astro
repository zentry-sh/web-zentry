---
import Layout from "../layouts/Layout.astro";
import WelcomeNav from "../components/WelcomeNav.svelte";

import "../assets/fonts/stylesheet.css";
import SectionMain from "../components/section-main/Section-main.astro";
---

<Layout>
  <WelcomeNav client:load />
  <SectionMain />
</Layout>

<style>
  html,
  body {
    height: 100%;
    overflow-x: hidden;
    overflow-y: visible;
  }

  body {
    font-family: "Inter", sans-serif;
    background:
      radial-gradient(
        circle at top,
        rgba(99, 102, 241, 0.251) 0%,
        rgba(0, 0, 0, 0) 70%
      ),
      #050a13; /* color base */
    color: #e2e8f0;
  }
</style>
